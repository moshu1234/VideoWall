<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp">
        <Button
            android:id="@+id/select_video"
            android:text="@string/action_selectVideo"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/colorText"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/take_video"
            android:text="@string/action_takeVideo"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/colorText"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">
        <ImageView
            android:id="@+id/pic_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/pic"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/vid_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vid"
            android:layout_margin="10dp"/>
    </LinearLayout>
</FrameLayout>